@using GameStoreMVC.ViewModels.UserVM;
@model CreateUserVM

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Register</h3>
                <span class="breadcrumb"><a asp-action="Index" asp-controller="Home">Home</a>  >  Register</span>
            </div>
        </div>
    </div>
</div>

<div class="contact-page section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div style="margin: 0;" class="right-content">
                    <div class="row">
                        <div class="col-lg-12">
                        </div>
                        <div class="col-lg-12">
                            <form id="contact-form" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <input asp-for="Name" type="text">
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <input asp-for="Surname" type="text">
                                            <span class="text-danger" asp-validation-for="Surname"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input asp-for="UserName" type="text">
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input asp-for="Email" type="email">
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input asp-for="Password" type="password">
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input asp-for="ConfirmPassword" type="password">
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        @Html.ValidationSummary()
                                    </div>
                                    <div class="col-lg-12">
                                        <span class="breadcrumb"><a asp-controller="Accounts" asp-action="Login">Have an account? Login now!</a></span>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="orange-button">Register</button>
                                        </fieldset>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
